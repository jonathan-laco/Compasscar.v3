{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Garante que a saída vai para a pasta dist
    "baseUrl": "./",
    "paths": {
      "docs/": ["docs/"]  // Mapear o diretório docs
    }
  },
  "include": [
    "src//*.ts",
    "docs//*.ts"  // Certificando-se de que a pasta docs será compilada também
  ],
  "exclude": ["node_modules"]
}